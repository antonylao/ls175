<h2 class="content-subhead">Table of Contents</h2>

<div class="pure-menu">
  <ul class="pure-menu-list">
    <% @contents.each_with_index do |chapter, chapter_index| 
      chapter_no = chapter_index + 1 %>
      <li class="pure-menu-item">
        <a href="chapters/<%= chapter_no %>" class="pure-menu-link"><%= chapter %></a>
      </li>
    <% end %>
  </ul>
</div>